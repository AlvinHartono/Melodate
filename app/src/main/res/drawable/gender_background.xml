<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when button is selected -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFC0CB" /> <!-- Pink color -->
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#FF69B4" /> <!-- Border color -->
        </shape>
    </item>

    <!-- Default state -->
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Grey color -->
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#A9A9A9" /> <!-- Border color -->
        </shape>
    </item>
</selector>