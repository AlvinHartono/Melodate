<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:padding="8dp">

    <View
        android:id="@+id/profile_image_placeholder"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/circle_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/user_name_placeholder"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#E0E0E0"
        app:layout_constraintStart_toEndOf="@id/profile_image_placeholder"
        app:layout_constraintTop_toTopOf="@id/profile_image_placeholder" />

    <View
        android:id="@+id/latest_chat_message_placeholder"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:background="#E0E0E0"
        app:layout_constraintStart_toStartOf="@+id/user_name_placeholder"
        app:layout_constraintTop_toBottomOf="@+id/user_name_placeholder" />

</androidx.constraintlayout.widget.ConstraintLayout>