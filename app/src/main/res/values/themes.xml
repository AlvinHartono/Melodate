<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Melodate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/pink_carnation</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/pink_carnation</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="backgroundColor">@color/white_pampas</item>

        <item name="colorSurface">@color/surfaceColor</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.Melodate" parent="Base.Theme.Melodate" />

    <style name="LargeButton" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:maxWidth">500dp</item>
        <item name="android:minWidth">330dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textStyle">bold</item>

        <item name="android:elevation">8dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
    </style>

    <style name="FABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:backgroundTint">@color/pink_carnation</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Heading_1" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Heading_2" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@android:color/black</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="LargeChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:minHeight">150dp</item> <!-- Increase height -->
        <item name="android:minWidth">150dp</item> <!-- Increase height -->
        <item name="android:textSize">18sp</item> <!-- Larger text -->
        <item name="android:gravity">center</item> <!-- Larger text -->
        <item name="chipStartPadding">16dp</item> <!-- Adjust inner padding -->
        <item name="chipEndPadding">16dp</item>
        <item name="chipCornerRadius">12dp</item> <!-- Larger corner radius -->
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/primaryColor</item>
    </style>
</resources>